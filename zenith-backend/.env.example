# MongoDB Atlas Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=mlrit
MONGODB_DB_NAME=mlrit_chatbot

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=mlrit
PINECONE_HOST=https://your-index.svc.region.pinecone.io
PINECONE_ENVIRONMENT=us-east-1

# LLM Provider Configuration (openai or gemini)
LLM_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# Application Configuration
APP_NAME=MLRIT Smart Campus & Placement Assistant
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# API Configuration
API_V1_PREFIX=/api/v1

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RESULTS=5

# PDF Configuration
PDF_OUTPUT_DIR=generated_reports
